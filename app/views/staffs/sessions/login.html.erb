<div class="ui middle aligned center aligned grid container">
  <div class="column" style="margin-top: 30px;">
    <h2 class="ui teal image header">
      <div class="content">
        Log-in
      </div>
    </h2>

    <% if flash[:error] %>
      <div class="error"><%= flash[:error] %></div>
    <% end %>

    <%= form_for(:admin_user, url: '/', html: { class: "ui large form", novalidate: "novalidate" } ) do |f| %>
    <div class="ui stacked segment">
      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.text_field :email, class: "material-input", required: "", autofocus: true %>
        </div>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password %>
        </div>
      </div>
      <%= f.submit 'Login', class: "ui fluid large teal submit button" %>
    </div>

    <div class="ui error message"></div>
    <% end %>

    <div class="ui message">
      <%= link_to '비밀번호 찾기', new_admin_user_password_path, class: 'no-account' %>
    </div>
  </div>
</div>
